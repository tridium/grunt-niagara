{
  "tags"      : {
    "allowUnknownTags" : true
  },
  "plugins"   : [
    "plugins/markdown"
  ],
  "docdash": {
    "wrap" : "true",
    "search": true,
    "collapse": "top",
    "typedefs": true,
    "meta" : {
      "title" : "{{ moduleName }}"
    }
  },
  "templates" : {
    "cleverLinks"     : false,
    "monospaceLinks"  : false,
    "default"         : {
      "outputSourceFiles" : true,
      "includeDate": false,
      "layoutFile": "{{ layoutFile }}"
    },
    "systemName"      : "{{ moduleName }}",
    "copyright"      :  "{{ moduleName }} Copyright © {{ copyrightYear }} Tridium. docdash Copyright © 2016 the contributors to the JSDoc and docdash projects.",
    "linenums"        : true,
    "collapseSymbols" : false
  },
  "markdown"  : {
    "parser"   : "gfm",
    "hardwrap" : true
  }
}
